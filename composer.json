{
  "name": "laraib15/laravel-schema-generator",
  "description": "Generate Laravel migrations from a schema DSL (create, add, modify, drop columns with DB diffing).",
  "type": "library",
  "license": "MIT",

  "keywords": [
    "laravel",
    "migration generator",
    "crud generator",
    "schema dsl",
    "schema generator",
    "migration diff",
    "mysql",
    "postgres"
  ],

  "authors": [
    {
      "name": "Laraib Tahir",
      "email": "laraib15tahir@gmail.com"
    }
  ],

  "autoload": {
    "psr-4": {
      "Laraib15\\SchemaGenerator\\": "src/"
    }
  },

  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },

  "require": {
    "php": "^8.1",
    "illuminate/support": "^9.0|^10.0|^11.0|^12.0",
    "illuminate/database": "^9.0|^10.0|^11.0|^12.0",
    "illuminate/console": "^9.0|^10.0|^11.0|^12.0"
  },

  "suggest": {
    "doctrine/dbal": "Required for modify-column support (schema diffing & ->change()). Install via: composer require doctrine/dbal"
  },

  "require-dev": {
    "orchestra/testbench": "^7.0|^8.0|^9.0",
    "phpunit/phpunit": "^9.5|^10.0"
  },

  "extra": {
    "laravel": {
      "providers": [
        "Laraib15\\SchemaGenerator\\SchemaGeneratorServiceProvider"
      ]
    }
  },

  "minimum-stability": "stable",
  "prefer-stable": true,

  "support": {
    "issues": "https://github.com/laraib15/laravel-schema-generator/issues",
    "source": "https://github.com/laraib15/laravel-schema-generator"
  }
}
